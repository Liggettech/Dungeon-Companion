<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"

    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:id="@+id/layInfoWeaponContainer">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_horizontal"
        android:layout_marginBottom="10dp"
        android:id="@+id/layInfoTitle">

        <TextView
            android:text="Weapon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textInfoTitle"
            android:textSize="30sp" />

    </LinearLayout>

    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:id="@+id/layWeaponStatsContainer">

        <RelativeLayout
            android:orientation="vertical"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Damage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblInfoWeaponDamage"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <TextView
                android:text="1d6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/textInfoWeaponDamage"
                android:textSize="36sp" />

            <TextView
                android:text="bludgeoning"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textInfoWeaponDamage"
                android:layout_centerHorizontal="true"
                android:id="@+id/textInfoWeaponDamageType" />


        </RelativeLayout>

        <ImageView
            app:srcCompat="@drawable/axe"
            android:id="@+id/imageView"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="150dp" />

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:text="Properties"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/lblInfoWeaponProperties"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />

            <ListView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_alignParentTop="false"
                android:layout_centerHorizontal="true"
                android:layout_below="@+id/lblInfoWeaponProperties" />
        </RelativeLayout>
    </LinearLayout>

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        android:layout_marginBottom="10dp">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:text="Cost:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView5"
                android:gravity="right"
                android:paddingRight="10dp" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView4"
                android:layout_gravity="left" />

            <TextView
                android:text="Weight:"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView3"
                android:gravity="right"
                android:paddingRight="10dp" />

            <TextView
                android:text="0"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/textView2"
                android:gravity="left" />
        </TableRow>

    </TableLayout>

    <LinearLayout
        android:id="@+id/layInfoDescription"
        android:layout_width="match_parent"
        android:layout_height="match_parent"

        android:orientation="vertical"
        android:weightSum="1">

        <ScrollView
            android:id="@+id/scrollInfoDescription"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="0.85"
            android:layout_marginBottom="10dp">

            <TextView
                android:id="@+id/textInfoDescription"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:textSize="16sp"
                android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua." />
        </ScrollView>

        <Button
            android:id="@+id/btnInfoClose"
            android:layout_width="match_parent"
            android:layout_height="0dp"

            android:layout_weight="0.15"
            android:gravity="center"
            android:text="Close" />
    </LinearLayout>
</LinearLayout>