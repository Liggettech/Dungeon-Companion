<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/char_overlay_container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:context="liggettech.dungeoncompanion.CharacterSheet">

        <android.support.v4.view.ViewPager
            android:id="@+id/char_overlay_viewpager"
            android:layout_width="match_parent"
            android:layout_height="match_parent" />

        <RelativeLayout
            android:id="@+id/char_overlay_indicator_container"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:layout_alignParentBottom="true"
            android:gravity="center">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal"
                    android:id="@+id/char_overlay_indicator"
                    android:gravity="center"/>

        </RelativeLayout>
</RelativeLayout>
